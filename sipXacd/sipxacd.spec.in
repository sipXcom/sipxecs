Name:     @PACKAGE@
Version:  @VERSION@
Release:  @PACKAGE_REVISION@

Summary:  SIP ACD Server
License:  LGPL
Group:    Productivity/Telephony/SIP/Servers
Vendor:   Pingtel
Packager: Pingtel
Url:      http://www.pingtel.com
 
BuildRequires: automake
BuildRequires: gcc-c++
BuildRequires: cppunit-devel
BuildRequires: pcre-devel >= 4.5
BuildRequires: openssl-devel
BuildRequires: boost-devel
BuildRequires: sipxcalllib-devel >= %version
BuildRequires: sipxcommserverlib-devel >= %version
BuildRequires: sipxmediaadapterlib-devel >= %version
BuildRequires: sipxmedialib-devel >= %version
BuildRequires: sipxportlib-devel >= %version
BuildRequires: sipxtacklib-devel >= %version

Source:   %name-%version.tar.gz
Obsoletes: %name-devel

Requires: sipxcommserverlib >= %version
Requires: sipxcalllib >= %version
Requires: boost

Prefix:    %_prefix
BuildRoot: %{_tmppath}/%name-%version-root

%description
TBD

%if %{_vendor} == suse
%debug_package
%endif

%prep
%setup -q

%build
%configure @SIPX_RPM_CONFIGURE_OPTIONS@
cp config.log %name.configlog
make

%install
rm -rf $RPM_BUILD_ROOT
make DESTDIR=$RPM_BUILD_ROOT install

%clean
rm -rf $RPM_BUILD_ROOT

%files
%defattr(644,root,root,755)
%doc %name.configlog
%attr(755,root,root) %{_sysconfdir}/init.d/sipxacd
%{_datadir}/sipxecs/cfinputs/plugin.d/sipxacd.cf
%config(noreplace) %{_sysconfdir}/sipxpbx/sipxacd-config
