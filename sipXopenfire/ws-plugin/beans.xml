<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
  xmlns:beans="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/security
           http://www.springframework.org/schema/security/spring-security-3.1.xsd">

  <http auto-config='true'>
    <intercept-url pattern="/register" access="ROLE_USER" />
  </http>

  <beans:bean id="openfireProps" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    <beans:property name="searchSystemEnvironment" value="true" />
    <beans:property name="ignoreUnresolvablePlaceholders" value="true" />
  </beans:bean>

  <authentication-manager>
    <authentication-provider ref='daoAuthenticationProvider'/>
  </authentication-manager>

  <beans:bean id="daoAuthenticationProvider" class="org.springframework.security.authentication.dao.DaoAuthenticationProvider">
	<beans:property name="userDetailsService" ref="mongoUserDetailsService"/>
    <beans:property name="passwordEncoder" ref="passwordEncoder" />
    <beans:property name="saltSource">
      <beans:bean class="org.sipfoundry.commons.security.SaltSourceImpl" />
    </beans:property>	
  </beans:bean>
  
  <beans:bean id="mongoUserDetailsService" class=" org.sipfoundry.commons.security.MongoUserDetailsService">
    <beans:property name="validUsers" >
		<beans:bean class="org.sipfoundry.commons.util.UnfortunateLackOfSpringSupportFactory" factory-method="getValidUsers">
		</beans:bean>
	</beans:property>
  </beans:bean>
  
  <beans:bean id="passwordEncoder" class="org.sipfoundry.commons.security.PasswordEncoderImpl">
  	<beans:property name="realm" value="${openfire.realm}" />
  </beans:bean>
  
  <beans:bean id="presenceEventListener" class="org.sipfoundry.openfire.ws.PresenceEventListenerImpl">
  </beans:bean>
  
  <beans:bean id="presenceWebSocket" class="org.sipfoundry.openfire.ws.PresenceWebSocket" scope="prototype">
  	<beans:property name="presenceEventListener" ref="presenceEventListener" />
  	<beans:property name="userDetailsService" ref="mongoUserDetailsService" />
  	<beans:property name="passwordEncoder" ref="passwordEncoder" />
  </beans:bean>  
  
  <beans:bean id="presence" class="org.sipfoundry.openfire.ws.PresenceServlet" init-method="init">
  	<beans:property name="presenceEventListener" ref="presenceEventListener" />
  </beans:bean>     
       
    
</beans:beans>